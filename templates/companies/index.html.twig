{% extends 'base.html.twig' %}

{% block title %}Hello CompaniesController!
{% endblock %}

{% block body %}

	<h1>Companies list</h1>
	<table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Acronym</th>
                <th>Employees</th>
            </tr>
		{% for company in companies %}
			<tr>
				<td>{{ company.id}}</td>
				<td>{{ company.name}}</td>
				<td>{{ company.acronym}}</td>
				<td>{{ company.employees}}</td>
			</tr>
		{% endfor %}
	</table>
{% endblock %}
